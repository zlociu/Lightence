@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Manage User";
    ViewData["page_name"] = "Manage User";
    ViewData["username"] = Context.User.Identity.Name;
}

<h2>Deleting users</h2>
<div class="form_unit">
    @using (@Html.BeginForm("ManageUsers", "Admin", FormMethod.Post))
    {
        <div class="form_element">
            @Html.TextBox("username", "", null, new { Placeholder = "username", Class = "text_input" })
        </div>
        <div class="form_element">
            <input type="submit" value="Remove user" class="submit" />
        </div>
    }
</div>
<div class="error_info">
    @ViewData["error"]
</div>
