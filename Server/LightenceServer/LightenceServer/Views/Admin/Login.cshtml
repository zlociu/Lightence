@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Login";
    @model LightenceServer.Models.LoginModel;
}

<h2> Admin Panel - Login </h2>

<div class="form_unit">
    @using (@Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        <div class="form_element">
            @Html.TextBoxFor(model => model.Username, new { Placeholder = "username", Class = "text_input" })
        </div>
        <div class="form_element">
            @Html.PasswordFor(model => model.Password, new { Placeholder = "password", Class = "text_input" })
        </div>
        <div class="form_element">
            <input type="submit" value="Log in" class="submit" />
        </div>
    }
</div>
<div class="error_info">
    @ViewData["error"]
</div>


